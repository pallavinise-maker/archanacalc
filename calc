<script>
let display = document.getElementById("display");

function insert(val){
    if(display.innerText==="0") display.innerText="";
    display.innerText += val;
}

function clearAll(){
    display.innerText="0";
}

function sqrt(){
    display.innerText = Math.sqrt(eval(display.innerText));
}

function power(){
    display.innerText += "**2";
}

function factorial(){
    let n = eval(display.innerText);
    let f=1;
    for(let i=1;i<=n;i++) f*=i;
    display.innerText=f;
}

function func(type){
    let x = eval(display.innerText);
    if(type==="sin") display.innerText = Math.sin(x*Math.PI/180);
    if(type==="cos") display.innerText = Math.cos(x*Math.PI/180);
    if(type==="tan") display.innerText = Math.tan(x*Math.PI/180);
    if(type==="log") display.innerText = Math.log10(x);
    if(type==="ln") display.innerText = Math.log(x);
}

function calculate(){
    try{
        let exp = display.innerText.replace("π","Math.PI");
        display.innerText = eval(exp);
    }catch{
        display.innerText="Error";
    }
}
</script>

